<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/historical_pomodoro_height"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/item_pomodoro_root"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/item_pomodoro_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_pomodoro"
        android:layout_marginTop="@dimen/historical_pomodoro_margin_vertical"
        android:layout_marginBottom="@dimen/historical_pomodoro_margin_vertical"
        android:layout_marginLeft="@dimen/historical_pomodoro_margin_horizontal"
        android:layout_marginRight="@dimen/historical_pomodoro_margin_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/item_pomodoro_tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorDark"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@+id/item_pomodoro_bg"
        app:layout_constraintBottom_toTopOf="@+id/item_pomodoro_tv_counter_label"
        app:layout_constraintLeft_toLeftOf="@+id/item_pomodoro_bg"
        android:layout_marginLeft="@dimen/historical_pomodoro_radius"
        android:layout_marginStart="@dimen/historical_pomodoro_radius"
        android:paddingLeft="@dimen/historical_pomodoro_radius"
        android:paddingRight="@dimen/historical_pomodoro_radius"
        app:layout_constraintVertical_chainStyle="packed"
        android:textStyle="bold"
        android:textSize="@dimen/historical_pomodoro_counter_size"
        tools:text="10" />

    <TextView
        android:id="@+id/item_pomodoro_tv_counter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorDark"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/item_pomodoro_tv_counter"
        app:layout_constraintBottom_toBottomOf="@+id/item_pomodoro_bg"
        app:layout_constraintLeft_toLeftOf="@+id/item_pomodoro_tv_counter"
        app:layout_constraintRight_toRightOf="@+id/item_pomodoro_tv_counter"
        android:textStyle="bold"
        android:textSize="@dimen/historical_pomodoro_counter_label_size"
        android:text="asdfghsddf" />

    <TextView
        android:id="@+id/item_pomodoro_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorDark"
        app:layout_constraintTop_toTopOf="@+id/item_pomodoro_bg"
        app:layout_constraintBottom_toBottomOf="@+id/item_pomodoro_bg"
        app:layout_constraintLeft_toRightOf="@+id/item_pomodoro_tv_counter_label"
        app:layout_constraintRight_toLeftOf="@+id/item_pomodoro_iv_play"
        android:layout_marginLeft="@dimen/historical_pomodoro_radius"
        android:layout_marginRight="@dimen/historical_pomodoro_radius"
        android:textStyle="bold"
        android:textSize="@dimen/historical_pomodoro_title_size"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries" />

    <ImageView
        android:id="@+id/item_pomodoro_iv_play"
        android:layout_width="@dimen/historical_pomodoro_icon_size"
        android:layout_height="@dimen/historical_pomodoro_icon_size"
        app:srcCompat="@drawable/ic_play_dark"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginEnd="@dimen/historical_pomodoro_radius"
        android:layout_marginRight="@dimen/historical_pomodoro_radius"
        app:layout_constraintTop_toTopOf="@+id/item_pomodoro_bg"
        app:layout_constraintRight_toRightOf="@+id/item_pomodoro_bg"
        app:layout_constraintBottom_toTopOf="@+id/item_pomodoro_iv_delete"/>

    <ImageView
        android:id="@+id/item_pomodoro_iv_delete"
        android:layout_width="@dimen/historical_pomodoro_icon_size"
        android:layout_height="@dimen/historical_pomodoro_icon_size"
        app:srcCompat="@drawable/ic_delete_dark"
        app:layout_constraintLeft_toLeftOf="@+id/item_pomodoro_iv_play"
        app:layout_constraintTop_toBottomOf="@+id/item_pomodoro_iv_play"
        app:layout_constraintBottom_toBottomOf="@+id/item_pomodoro_bg"
        app:layout_constraintRight_toRightOf="@+id/item_pomodoro_iv_play"/>

</android.support.constraint.ConstraintLayout>